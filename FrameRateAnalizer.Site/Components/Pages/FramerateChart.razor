@using ApexCharts
@using FramerateAnalizer

<MudContainer Class="d-flex justify-center align-center mt-10" Style="width: 100%">
    <ApexChart TItem="FramerateCaptureGroup" Title="Average Framerate (GeoMean)" Options=options>

        <ApexPointSeries TItem="FramerateCaptureGroup"
                         Items="CaptureGroups"
                         Name="Average FPS"
                         SeriesType="SeriesType.Bar"
                         YAggregate="@(e => (decimal)(e.Sum(g => g.Stats.Average)))"
                         XValue="@(e => e.BenchmarkedParts)"
                         ShowDataLabels />

        <ApexPointSeries TItem="FramerateCaptureGroup"
                         Items="CaptureGroups"
                         Name="10% Low Avg FPS"
                         SeriesType="SeriesType.Bar"
                         YAggregate="@(e => (decimal)(e.Sum(g => g.Stats.TenPercentLowAverage)))"
                         XValue="@(e => e.BenchmarkedParts)"
                         ShowDataLabels />
        
        <ApexPointSeries TItem="FramerateCaptureGroup"
                         Items="CaptureGroups"
                         Name="1% Low Avg FPS"
                         SeriesType="SeriesType.Bar"
                         YAggregate="@(e => (decimal)(e.Sum(g => g.Stats.OnePercentLowAverage)))"
                         XValue="@(e => e.BenchmarkedParts)"
                         ShowDataLabels />

        <ApexPointSeries TItem="FramerateCaptureGroup"
                         Items="CaptureGroups"
                         Name="0.1% Low Avg FPS"
                         SeriesType="SeriesType.Bar"
                         YAggregate="@(e => (decimal)(e.Sum(g => g.Stats.ZeroPointOnePercentLowAverage)))"
                         XValue="@(e => e.BenchmarkedParts)"
                         ShowDataLabels />
    </ApexChart>
</MudContainer>

@code {
    [Parameter]
    public IList<FramerateCaptureGroup> CaptureGroups { get; set; }

    private ApexChartOptions<FramerateCaptureGroup> options;

    protected override void OnInitialized()
    {
        options = new ApexChartOptions<FramerateCaptureGroup>
        {
            // Stroke = new Stroke
            // {
            //     Colors = ["transparent"],
            //     Width = 2
            // },
            Chart = new Chart
            {
                Stacked = false,
                StackType = StackType.Normal,
                Toolbar = new Toolbar
                {
                    Show = false
                },
                Width = 800,
            },
            PlotOptions = new PlotOptions
            {
                Bar = new PlotOptionsBar
                {
                    Horizontal = true,
                    BarHeight = "80%",
                    //BorderRadius = 2,
                    DataLabels = new PlotOptionsBarDataLabels
                    {
                        Position = BarDataLabelPosition.Top,  
                    }
                }
            },
            Theme = new Theme { Mode = Mode.Light, Palette = PaletteType.Palette8 },
            Xaxis = new XAxis
            {
                Labels = new XAxisLabels
                {
                    Style = new AxisLabelStyle
                    {
                        FontSize = "0.875rem",
                        FontWeight = 500
                    }
                }
            },
            Yaxis = new List<YAxis> { 
                new YAxis
                {
                    Labels = new YAxisLabels {
                        MaxWidth = 400,
                        Style = new AxisLabelStyle {
                            FontSize = "0.875rem",
                            FontWeight = 500
                        }
                    },
                    DecimalsInFloat = 1
                }
            },
            Legend = new Legend
            {
                Position = LegendPosition.Top
            },
            DataLabels = new DataLabels
            {
                Formatter = "function (val) { return val.toFixed(1); }",
                OffsetX = -25
            },
            Colors = [Colors.Blue.Darken1, Colors.Blue.Darken2, Colors.Blue.Darken3, Colors.Blue.Darken4]
        };

        base.OnInitialized();
    }
}
