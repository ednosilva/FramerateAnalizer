<Tabs Class="mx-7">
    <TabPane Key="1">
        <TabTemplate>Framerate</TabTemplate>
        <ChildContent>
            <Bar Data="data1" Config="config1"/>
        </ChildContent>
    </TabPane>
</Tabs>

@code{
    [Parameter]
    public IList<FramerateCaptureGroup> CaptureGroups { get; set; }

    List<object> data1 = new();

    protected override void OnInitialized()
    {

        foreach (var group in CaptureGroups)
        {
            List<object> data = new List<object>()
            {
                new
                {
                    title = group.Cpu,
                    label = "Average",
                    data = Math.Round(group.Stats.Average, 1)
                },
                new
                {
                    title = group.Cpu,
                    label = "10% Low",
                    data = Math.Round(group.Stats.TenPercentLowAverage, 1)
                },
                new
                {
                    title = group.Cpu,
                    label = "1% Low",
                    data = Math.Round(group.Stats.OnePercentLowAverage, 1)
                },
                new
                {
                    title = group.Cpu,
                    label = "0.1% Low",
                    data = Math.Round(group.Stats.ZeroPointOnePercentLowAverage, 1)
                }
            };

            data1.AddRange(data);
        }
    }

    readonly BarConfig config1 = new BarConfig
    {
        Title = new Title
        {
            Visible = true,
            Text = "Framerate"
        },
        XField = "data",
        YField = "title",
        SeriesField = "label",
        Color = new[] { "#1f77b4", "#2ca02c", "#ff7f0e", "#ff4d00" },
        Label = new BarViewConfigLabel 
        {
            Visible = true,
            Position = "top",
            AdjustColor = true
        }
    };
}