@using AntDesign
@using AntDesign.Charts
@using FramerateAnalyzer.Domain
@using Title = AntDesign.Charts.Title

<Tabs Class="mx-7">
    <TabPane Key="1">
        <TabTemplate>Framerate</TabTemplate>
        <ChildContent>
            <Bar Data="data1" Config="config1"/>
        </ChildContent>
    </TabPane>
</Tabs>

@code{
    [Parameter]
    public IList<FramerateCaptureGroup> CaptureGroups { get; set; }

    List<object> data1 = new();

    protected override void OnInitialized()
    {

        foreach (var group in CaptureGroups)
        {
            List<object> data = new List<object>()
            {
                new
                {
                    title = group.Cpu,
                    label = "Average",
                    data = Math.Round(group.Stats.Average, 1)
                },
                new
                {
                    title = group.Cpu,
                    label = "10% Low",
                    data = Math.Round(group.Stats.TenPercentLowAverage, 1)
                },
                new
                {
                    title = group.Cpu,
                    label = "1% Low",
                    data = Math.Round(group.Stats.OnePercentLowAverage, 1)
                },
                new
                {
                    title = group.Cpu,
                    label = "0.1% Low",
                    data = Math.Round(group.Stats.ZeroPointOnePercentLowAverage, 1)
                }
            };

            data1.AddRange(data);
        }
    }

    readonly BarConfig config1 = new BarConfig
    {
        Title = new Title
        {
            Visible = true,
            Text = "Framerate"
        },
        Height = 200,
        XField = "data",
        YField = "title",
        SeriesField = "label",
        Color = new[] { "#1e88e5d9", "#1976d2d9", "#1565c0d9", "#0d47a1d9" },
        Label = new BarViewConfigLabel 
        {
            Visible = true,
            Position = "right",
            OffsetX = -50,
            Style = new TextStyle
            {
                Fill = "#FFFFFF",
                FontWeight = 700
            },
        }
    };
}